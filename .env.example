# Server
PORT=8080
NODE_ENV=development
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Security
BODY_LIMIT_BYTES=1048576

# Swagger (enable for development)
ENABLE_SWAGGER=false

# ===========================================
# Database Connection (choose ONE option)
# ===========================================

# Option 1: Cloud Run (unix socket)
# Set CLOUDSQL_INSTANCE to use unix socket connection
# CLOUDSQL_INSTANCE=project:region:instance

# Option 2: Local development (TCP via Cloud SQL Auth Proxy)
# Leave CLOUDSQL_INSTANCE unset, use DB_HOST and DB_PORT
DB_HOST=localhost
DB_PORT=5432

# Common database settings (required for both options)
DB_USER=postgres
DB_PASS=your-password
DB_NAME=mydb
DB_POOL_MAX=5

# ===========================================
# Redis (VM private IP)
# ===========================================
REDIS_HOST=10.128.0.2
REDIS_PORT=6379
REDIS_PASS=
